extends template

block pageVars
    - var pageTitle    = "Form Layouts"
    - var activeMenu   = "form-layouts"
    - var description  = "There are many variations added to default form layout. Horizontal form layouts, hidden label form layouts, row separator layouts, bordered form layouts, striped rows form layouts, striped label form layouts are added by Vuexy template."



append pageConfig
    - var contentLayout = 'content-right-sidebar'
    - var sidebarSticky = true
    //-OPTIONS:- true, false | For sticky(floating) sidebar, will affect only if there is a sidebar

append breadcrumbs
    +breadcrumbs([{url:"index.html",name:"Home"}, {name:"Forms"}, {name:"Form Layouts"}])



//- Include page content in content block
append content
    include ../contents/documentation-form-layouts.html

append sidebar
