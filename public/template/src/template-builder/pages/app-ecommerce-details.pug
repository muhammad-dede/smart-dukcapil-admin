extends template

block pageVars
    - var pageTitle    = "Product Details"
    - var pageSubTitle = "Product Details"
    - var description  = "app ecommerce details"
    - var activeMenu   = "app-ecommerce-details"

append pageConfig
    - var pageClass = 'ecommerce-application'

block breadcrumbs
  +breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"eCommerce"},{url:"app-ecommerce-shop.html",name:"Shop"}, {name:"Details"}])

//- Include chat content in page block
append content
    include ../contents/app-ecommerce-details.html

append vendorcss
    //- Bootstrap Touchspin CSS
    link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/forms/spinner/jquery.bootstrap-touchspin.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/swiper.min.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/toastr.min.css')

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/pages/app-ecommerce-details.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/forms/form-number-input.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/extensions/ext-component-toastr.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
    script(src=app_assets_path+'/js/scripts/pages/app-ecommerce-details.js')
    //- Template js for input Groups
    script(src=app_assets_path + '/js/scripts/forms/form-number-input.js')

append vendorjs
    //- Bootstrap TouchSpin JS
    script(src=app_assets_path + '/vendors/js/forms/spinner/jquery.bootstrap-touchspin.js')
    script(src=app_assets_path+'/vendors/js/extensions/swiper.min.js')
    script(src=app_assets_path + '/vendors/js/extensions/toastr.min.js')
