extends template

block pageVars
    - var pageTitle    = "Sliders"
    - var pageSubTitle = "javaScript range slider library"
    - var description  = "Sliders is a lightweight JavaScript range slider library. It offers a wide selection of options and settings, and is compatible with a ton of (touch) devices, including those running iOS, Android, Windows 8/8.1/10, Windows Phone 8.1 and Windows Mobile 10."
    - var activeMenu   = "ext-component-sliders"

block breadcrumbs
    +breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extensions"}, {name:"Sliders"}])

//- Include page content in page block
append content
    include ../contents/ext-component-sliders.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/nouislider.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
    script(src=app_assets_path+'/vendors/js/extensions/wNumb.min.js')
    script(src=app_assets_path+'/vendors/js/extensions/nouislider.min.js')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/extensions/ext-component-sliders.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/core/colors/palette-noui.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
    script(src=app_assets_path+'/js/scripts/extensions/ext-component-sliders.js')
