extends template

block pageVars
    - var pageTitle    = "Sweet Alerts"
    - var pageSubTitle = "Replacement for javascript's 'alert'"
    - var description  = "A BEAUTIFUL REPLACEMENT FOR JAVASCRIPT'S 'ALERT'"
    - var activeMenu   = "ext-component-sweet-alerts"

block breadcrumbs
    +breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Extensions"}, {name:"Sweet Alerts"}])

//- Include page content in page block
append content
    include ../contents/ext-component-sweet-alerts.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/animate/animate.min.css')
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/sweetalert2.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
    script(src=app_assets_path+'/vendors/js/extensions/sweetalert2.all.min.js')
    script(src=app_assets_path+'/vendors/js/extensions/polyfill.min.js')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/extensions/ext-component-sweet-alerts.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
    script(src=app_assets_path+'/js/scripts/extensions/ext-component-sweet-alerts.js')
