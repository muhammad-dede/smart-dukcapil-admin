extends template

block pageVars
    - var pageTitle = "File Uploader"
    - var pageSubTitle = "drag’n’drop file uploader"
    - var description = "DropzoneJS is an open source library that provides drag’n’drop file uploads with image previews. It’s lightweight, doesn’t depend on any other library (like jQuery) and is highly customizable."
    - var activeMenu = "form-file-uploader"

block breadcrumbs
    +breadcrumbs([{url:"index.html",name:"Home"}, {name:"Form Elements"}, {name:"File Uploader"}])

//- Include page content in page block
append content
    include ../contents/form-file-uploader.html

//- Vendor CSS
//------------------------------
//- Add vendor specific CSS
append vendorcss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/file-uploaders/dropzone.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
    script(src=app_assets_path+'/vendors/js/file-uploaders/dropzone.min.js')

//- Page CSS
//------------------------------
//- Add page specific CSS
append pagecss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/forms/form-file-uploader.css')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
    script(src=app_assets_path+'/js/scripts/forms/form-file-uploader.js')
