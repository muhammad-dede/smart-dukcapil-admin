extends template

block pageVars
  - var pageTitle    = "Layout collapsed menu"
  - var pageSubTitle = "layout collapsed menu"
  - var description  = "Layout with collapsed menu"
  - var activeMenu   = "layout-collapsed-menu"

block breadcrumbs
  +breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Layouts"}, {name:"Collapsed menu"}])

append verticalMenuConfig
  - var menuCollapsed = true


//- Include page content in page block
append content
  .row
    .col-12
      .alert.alert-primary(role='alert')
        .alert-body
          strong Info:
          |  Use this layout to set menu (navigation) default collapsed. Please check the&nbsp;
          a.text-primary(href='https://pixinvent.com/demo/vuexy-html-bootstrap-admin-template/documentation/documentation-layout-collapsed-menu.html', target='_blank') Layout collapsed menu documentation
          | &nbsp; for more details.
  include ../contents/dashboard-ecommerce.html

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
append vendorcss
  //- apex chart
  link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/charts/apexcharts.css')
  link(rel='stylesheet', type='text/css', href=app_assets_path+'/vendors/css/extensions/toastr.min.css')


//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
  link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/pages/dashboard-ecommerce.css')
  link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/charts/chart-apex.css')
  link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/plugins/extensions/ext-component-toastr.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
  //- apex charts
  script(src=app_assets_path+'/vendors/js/charts/apexcharts.min.js')
  script(src=app_assets_path + '/vendors/js/extensions/toastr.min.js')


//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
  //- Dashboard custom js
  script(src=app_assets_path+'/js/scripts/pages/dashboard-ecommerce.js')
