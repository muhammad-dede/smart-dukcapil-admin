extends template

block pageVars
    - var pageTitle    = "Blog Detail"
    - var pageSubTitle = "Blog detail page"
    - var description  = "Blog detail page to show details about blog-post"
    - var activeMenu   = "blog-detail"

append pageConfig
    - var contentLayout = 'content-detached-right-sidebar'

block breadcrumbs
    +breadcrumbs([{url:"index.html",name:"Home"},{url:"#",name:"Pages"},{url:"#",name:"Blog"}, {name:"Detail"}])

//- Include page content in page block
append content
    include ../contents/page-blog-detail.html

//- Include page content in Sidebar block
append sidebar
    include ../contents/page-blog-sidebar.html

//- Page CSS
//------------------------------
//- Add custom page specific CSS
append pagecss
    link(rel='stylesheet', type='text/css', href=app_assets_path+'/css'+rtl+'/pages/page-blog.css')
